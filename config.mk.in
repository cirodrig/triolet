
# Directories
BUILDDIR=dist/build
DATADIR=data
SRCDIR=@srcdir@/src

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@

## System-dependent programs

CC=@CC@
HC=ghc
HSC2HS=hsc2hs
ESED=@cir_esed@
LINKSHARED=libtool -dynamic

## System-dependent flags

# Compiler and linker flags
ifeq (@BUILD_32BIT@, yes)

HSC2HS_32BIT_FLAG=--cflag=-m32 --lflag=-m32
CC_32BIT_FLAG=-m32
L_32BIT_FLAG=-optl-m32
LINKSHARED_32BIT_FLAG=

endif

HSC2HSFLAGS=$(HSC2HS_32BIT_FLAG)
HCFLAGS=
CCFLAGS=$(CC_32BIT_FLAG) -Werror \
  -Wimplicit-function-declaration -Wimplicit-int

LFLAGS=$(L_32BIT_FLAG)
LINKFLAGS=$(LINKSHARED_32BIT_FLAG)

# Include directories
INCLUDEDIRS=@cir_hs_libdir@/include \
	@cir_python_incdir@

# Library directories
LIBDIRS=

# Haskell package names, except for gluon-eval
C_PACKAGES=base containers mtl utf8-string fgl MaybeT language-python-pyon language-c gluon
L_PACKAGES=base containers mtl utf8-string fgl MaybeT language-python-pyon language-c gluon gluon-eval

# Library names
LIBS=python@cir_python_version@
